        <mxCell id="yI6-8ZS00x4xvBrg5cZX-1" value="LLM-as-a-Query Filter Prompt" style="swimlane;rounded=1;align=left;fillColor=#B3B3B3;strokeWidth=2;fontSize=14;" parent="1" vertex="1">
